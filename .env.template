# Deployment Environment Variables Template

## Copy this file and fill in your actual values

# ======================
# BACKEND (.env)
# ======================

# MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/twitter?retryWrites=true&w=majority

# Server
PORT=5000
NODE_ENV=production

# JWT Secret (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long

# CORS (your frontend URL)
CORS_ORIGIN=https://your-app.vercel.app

# Email Service - Option 1: Gmail
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-specific-password

# Email Service - Option 2: SendGrid (Recommended)
# SENDGRID_API_KEY=your-sendgrid-api-key
# FROM_EMAIL=noreply@yourdomain.com

# SMS Service - Twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Payment - Stripe (if using)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# ======================
# FRONTEND (.env.local)
# ======================

# Backend API URL
NEXT_PUBLIC_API_URL=https://your-backend.up.railway.app

# Firebase (if using)
NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-app.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-app.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123:web:abc123

# ======================
# NOTES
# ======================

# 1. Never commit .env files to Git
# 2. Use strong passwords and secrets
# 3. Keep production credentials separate from development
# 4. Rotate secrets regularly
# 5. Use environment-specific values for staging/production
